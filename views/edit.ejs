<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit User</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .glass-effect {
            backdrop-filter: blur(10px);
            background-color: rgba(255, 255, 255, 0.4);
        }
    </style>
</head>
<body class="bg-gradient-to-r from-blue-50 to-blue-100 font-sans">
    <main class="container mx-auto p-6">
        <!-- Edit User Form -->
        <div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-lg glass-effect border border-gray-200 mb-8">
            <h2 class="text-3xl font-semibold text-center mb-8 text-gray-900">Edit User</h2>
            <form action="/update-user/<%= user.id %>" method="POST" class="space-y-6">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <!-- Name Field -->
                    <div class="flex flex-col">
                        <label for="name" class="text-sm font-medium text-gray-700">Name</label>
                        <input type="text" id="name" name="name" class="w-full p-4 border border-gray-300 rounded-lg" value="<%= user.name %>" required>
                    </div>

                    <!-- Email Field -->
                    <div class="flex flex-col">
                        <label for="email" class="text-sm font-medium text-gray-700">Email</label>
                        <input type="email" id="email" name="email" class="w-full p-4 border border-gray-300 rounded-lg" value="<%= user.email %>" required>
                    </div>

                    <!-- Designation Field -->
                    <div class="flex flex-col">
                        <label for="designation" class="text-sm font-medium text-gray-700">Designation</label>
                        <input type="text" id="designation" name="designation" class="w-full p-4 border border-gray-300 rounded-lg" value="<%= user.designation %>" required>
                    </div>

                    <!-- Phone Number Field -->
                    <div class="flex flex-col">
                        <label for="phone_number" class="text-sm font-medium text-gray-700">Phone Number</label>
                        <input type="tel" id="phone_number" name="phone_number" class="w-full p-4 border border-gray-300 rounded-lg" value="<%= user.phone_number %>">
                    </div>

                    <!-- Date of Birth Field -->
                    <div class="flex flex-col">
                        <label for="date_of_birth" class="text-sm font-medium text-gray-700">Date of Birth</label>
                        <input type="datetime" id="date_of_birth" name="date_of_birth" class="w-full p-4 border border-gray-300 rounded-lg" value="<%= user.date_of_birth %>">
                    </div>
                </div>

                <!-- Address Field (Full-width) -->
                <div class="flex flex-col">
                    <label for="address" class="text-sm font-medium text-gray-700">Address</label>
                    <textarea id="address" name="address" class="w-full p-4 border border-gray-300 rounded-lg" rows="4" placeholder="Enter your address"><%= user.address %></textarea>
                </div>

                <!-- Is Active Field -->
                <div class="flex items-center space-x-3">
                    <input type="checkbox" id="is_active" name="is_active" class="h-5 w-5 text-blue-600" <%= user.is_active ? 'checked' : '' %>>
                    <label for="is_active" class="text-sm font-medium text-gray-700">Active User</label>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-xl">Update User</button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>
